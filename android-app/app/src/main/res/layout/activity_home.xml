<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="24dp">

    <!-- Logo and Title Section -->
    <LinearLayout
        android:id="@+id/logoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Lightning Bolt Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡"
            android:textSize="72sp"
            android:textColor="@color/accent_orange" />

        <!-- MeshTalk Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MeshTalk"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/primary_orange"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communication Without Limits"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/buttonsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_below="@id/logoSection">

        <!-- Start Chat Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_chat">

            <Button
                android:id="@+id/btnStartChat"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ’¬  START CHAT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                style="?attr/materialButtonOutlinedStyle" />

        </androidx.cardview.widget.CardView>

        <!-- Find Devices Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_find">

            <Button
                android:id="@+id/btnFindDevices"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ“±  FIND DEVICES"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                style="?attr/materialButtonOutlinedStyle" />

        </androidx.cardview.widget.CardView>

        <!-- Settings Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/button_settings">

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="âš™ï¸  SETTINGS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_background"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                style="?attr/materialButtonOutlinedStyle" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching for nearby devices..."
            android:textSize="14sp"
            android:textColor="@color/light_gray"
            android:visibility="gone"
            android:drawablePadding="8dp"
            android:gravity="center" />

        <!-- Team Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team ZEDOX | Imagine Cup 2025"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</RelativeLayout>